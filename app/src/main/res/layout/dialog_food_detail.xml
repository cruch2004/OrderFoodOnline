<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="8dp">
    <ImageView
        android:id="@+id/iv_dialog_food_pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_dialog_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_dialog_food_pic"
        android:layout_alignStart="@id/iv_dialog_food_pic"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#86F9FF"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_dialog_sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_food_name"
        android:layout_alignStart="@id/tv_dialog_food_name"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_gray"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_dialog_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_sale_num"
        android:layout_alignStart="@id/tv_dialog_sale_num"
        android:layout_marginTop="4dp"
        android:textColor="@color/price_red"
        android:textSize="14sp"
        android:textStyle="bold"/>
</RelativeLayout>
